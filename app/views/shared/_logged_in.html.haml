- money_per_hour = Work::MONEY_PER_LEVEL[current_work.level] if current_work
.avatar
.summary

  Name:
  = current_character.name
  %br
  Level:
  = current_character.level
  %br
  Money:
  #character_money{'data-money' => money_per_hour}
    = number_with_precision(current_character.money, precision: 2)
  = '(' + (money_per_hour || 0.0).to_s + 'per hour)'
.summary_work
  Work:
  = current_work ? current_work.level.to_s + ' level' : 'You are unemployeed'
.nav-button#sign_out
  Sign Out
.nav-button#character
  Character
.nav-button#work
  Work
.nav-button#houses
  Houses
.nav-button#thief
  Thief
